@model Project.Areas.manage.ViewModels.AdminChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Areas/manage/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3" >
            <div class="panel panel-info">
                <div class="panel-heading">
                    Change Password
                </div>
                <div class="panel-body">
                    @Html.ValidationSummary()
                    @ViewBag.Message
                    <div class="form-group">
                        @Html.LabelFor(x => x.OldPassword)
                        @Html.TextBoxFor(x => x.OldPassword, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.NewPassword)
                        @Html.TextBoxFor(x => x.NewPassword, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.RePassword)
                        @Html.TextBoxFor(x => x.RePassword, new { @class = "form-control" })
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Change Password" class="btn btn-info" />
                        <a href="@Url.Action("Index")">or Go Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}