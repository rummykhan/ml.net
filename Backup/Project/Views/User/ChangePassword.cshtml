@model Project.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6 col-lg-offset-3">
        <div class="panel panel-info" style="padding:10px;">
            <div class="panel-heading">
                Change Password
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="text-center text-danger">
                        @Html.ValidationSummary()
                        @ViewBag.Message
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.OldPassword)
                        @Html.PasswordFor(x => x.OldPassword, new { @class = "form-control" })
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(x => x.NewPassword)
                        @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control" })
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(x => x.ConfirmPassword)
                        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                    </div>
                    
                    <div class="form-group text-center">
                            <input type="submit" value="Submit" class="btn btn-info" />
                            <a href="@Url.Action("Index","Home")">Or Cancel</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

