@model Project.Areas.manage.ViewModels.AdminLoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/manage/Views/Shared/_AccountLayout.cshtml";
}

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="col-lg-offset-3 col-lg-6">
            <div class="panel panel-info">
                <div class="panel-heading text-center text-uppercase">
                    A D M I N I S T R A T O R
                </div>
                <div class="panel-body">

                    <div class="text-danger text-center">
                        @ViewBag.Message
                        @Html.ValidationSummary()
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.Username)
                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(x => x.Password)
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password" })
                    </div>

                    <div class="text-center">
                        <input class="btn btn-info" type="submit" value="Login!" />
                        <a class="btn btn-default" href="@Url.Action("ForgotPassword")">Forgot your password</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>