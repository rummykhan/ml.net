<div class="btn-toolbar">
    <div class="btn-group pull-right">
        @if (Model.Albums.HasPreviousPage)
        {
            <a href="@Url.Action("Index", new { page = Model.Albums.PreviousPage })" class="btn btn-default btn-primary btn-sm">
                <span class="glyphicon glyphicon-chevron-left"></span>
                Previous Page
            </a>
        }
        else
        {
            <a href="#" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-chevron-left"></span>
                Previous Page
            </a>
        }

        @if (Model.Albums.HasNextPage)
        {
            <a href="@Url.Action("Index", new { page = Model.Albums.NextPage })" class="btn btn-default btn-primary btn-sm">
                Next Page
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        }
        else
        {
            <a href="#" class="btn btn-default btn-sm">
                Next Page
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        }
    </div>
</div>