@model Project.Areas.manage.ViewModels.UsersResetPasswordViewModel
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Areas/manage/Views/Shared/_AdminLayout.cshtml";
}

<h2>Reset Password</h2>

<div class="text-danger">
    @ViewBag.Message
</div>

@using(Html.BeginForm())
{
    @Html.ValidationSummary();
    
    <table class="table table-responsive">
        <tr>
            <td>
                @Html.LabelFor(ux => ux.UserID)
            </td>
            <td>
                @Model.UserID
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(ux => ux.UserPass)
            </td>
            <td>
                @Html.EditorFor(ux => ux.UserPass, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Notify" class="btn btn-info" />
                <a href="@Url.Action("All")">or Go Back</a>
            </td>
        </tr>
    </table>
}

